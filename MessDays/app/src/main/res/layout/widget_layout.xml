<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="170dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Lunch Times Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/lunch_time"
            android:contentDescription="Lunch Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Lunch:"
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/widget_lunch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Dinner Times Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/dinner"
            android:contentDescription="Dinner Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Dinner:"
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/widget_dinner_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Mess Expenses -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/total"
            android:contentDescription="Total Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Total:"
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/widget_mess_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="â‚¹0"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>
